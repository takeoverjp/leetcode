{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": ["-g", "-Og", "-W", "-Wall", "-o", "a.out", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "valgrind ./a.out",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "build"
    }
  ]
}