{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-std=c++2a",
        "-Og",
        "-W",
        "-Wall",
        "-fsanitize=address,undefined",
        "-o",
        "a.out",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "./a.out",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "build",
      "problemMatcher": []
    },
    {
      "label": "fmt rust",
      "type": "shell",
      "command": "rustfmt",
      "args": [
        "${file}"
      ],
      "group": "build"
    },
    {
      "label": "build rust",
      "type": "shell",
      "command": "clippy-driver",
      "args": [
        "-g",
        "--test",
        "--crate-name",
        "test",
        "${file}"
      ],
      "group": "build",
      "dependsOn": "fmt rust"
    },
    {
      "label": "test rust",
      "type": "shell",
      "command": "./test",
      "group": "test",
      "dependsOn": "build rust",
      "problemMatcher": []
    },
    {
      "label": "test sql",
      "type": "shell",
      "command": "cat",
      "args": [
        "${file}",
        "|",
        "sqlite3"
      ],
      "group": "test"
    },
    {
      "label": "test Python3",
      "type": "shell",
      "command": "python3",
      "args": [
        "${file}"
      ],
      "group": "test"
    }
  ]
}